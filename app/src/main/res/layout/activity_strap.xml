<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:context=".StrapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <Button
            android:id="@+id/btn_m1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#63CFDB"
            android:text="Repouso"
            android:textColor="#4f4f4f"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_m2"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/btn_m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#63CFDB"
            android:text="Postural"
            android:textColor="#4f4f4f"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_m3"
            app:layout_constraintTop_toTopOf="@+id/guideline9"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_m3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#63CFDB"
            android:text="Dedo-nariz"
            android:textColor="#4f4f4f"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_m4"
            app:layout_constraintTop_toTopOf="@+id/guideline10"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_m4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#63CFDB"
            android:text="Sobre os testes"
            android:textColor="#4f4f4f"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline12"
            app:layout_constraintTop_toTopOf="@+id/guideline11"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp"
            app:layout_constraintGuide_percent="0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="110dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="196dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline20"
            app:srcCompat="@drawable/ic_ester" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>